{
  "format_version": 2,
  "min_clients": 4,
  "num_rounds": 300,

  "server": {
    "heart_beat_timeout": 600
  },

  "task_data_filters": [],
  "task_result_filters": [],

  "components": [
    {
      "id": "persistor",
      "name": "PTFileModelPersistor",
      "args": {
        "model": "model"
      }
    },
    {
      "id": "model",
      "path": "manafaln.models.C2FNAS",
      "args": {
        "in_channels": 1,
        "num_classes": 8,
        "final_activation": "none"
      }
    },
    {
      "id": "shareable_generator",
      "name": "FullModelShareableGenerator",
      "args": {}
    },
    {
      "id": "aggregator",
      "name": "InTimeAccumulateWeightedAggregator",
      "args": {
        "exclude_vars": null,
        "aggregation_weights": {
          "liver": 1.0,
          "spleen": 1.0,
          "pancreas": 1.0,
          "kidney": 1.0
        },
        "expected_data_kind": "WEIGHTS"
      }
    },
    {
      "id": "model_selector",
      "name": "IntimeModelSelector",
      "args": {
        "weigh_by_local_iter": false,
        "aggregation_weights": {
          "liver": 2.0,
          "spleen": 1.0,
          "pancreas": 2.0,
          "kidney": 2.0
        }
      }
    },
    {
      "id": "model_locator",
      "path": "manafaln.adapters.nvflare.widgets.SimpleModelLocator",
      "args": {}
    },
    {
      "id": "formatter",
      "path": "manafaln.adapters.nvflare.widgets.SimpleFormatter",
      "args": {}
    },
    {
      "id": "report_generator",
      "path": "manafaln.adapters.nvflare.widgets.ReportGenerator",
      "args": {}
    }
  ],

  "workflows": [
    {
      "id": "scatter_and_gather",
      "name": "ScatterAndGather",
      "args": {
        "min_clients": "{min_clients}",
        "num_rounds": "{num_rounds}",
        "start_round": 0,
        "wait_time_after_min_received": 10,
        "aggregator_id": "aggregator",
        "persistor_id": "persistor",
        "shareable_generator_id": "shareable_generator",
        "train_task_name": "train",
        "train_timeout": 0,
        "task_check_period": 1
      }
    },
    {
      "id": "cross_site_model_eval",
      "name": "CrossSiteModelEval",
      "args": {
        "model_locator_id": "model_locator",
        "formatter_id": "formatter",
        "submit_model_timeout": 600,
        "validation_timeout": 6000,
        "cleanup_models": true
      }
    }
  ]
}
